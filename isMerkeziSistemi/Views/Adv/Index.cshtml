
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-primary" href="@Url.Action("Add")" style="float:right ; width: 225px; display: inline-block; overflow: auto; white-space: nowrap; margin: 0px auto; border: 1px red solid;"> Create</a>
                <h3 class="box-title">Adv List</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>images</th>
                            <th>Name</th>
                            <th>Category Name</th>
                            <th>Type Name</th>
                            <th>Maaş</th>
                            <th>City</th>
                            
                            <th>Operation</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.adv)
                        {
                        <tr style="text-align:center;">
                            <td><img src="~/Content/images/@item.Image" width="85" height="70" /></td>
                            <td>@item.JobName</td>
                            <td>@item.Category</td>
                            <td>@item.Tip</td>
                            <td>@item.maas</td>
                            <td>@item.City</td>

                            <td>
                                <a class="btn btn-danger" href="@Url.Action("Delete" , new { id = item.Id })"> <i class="fa fa-fw fa-trash-o"></i> Delete</a>
                            </td>
                        </tr>
                        }


                    </tbody>

                    <tfoot>
                        <tr>
                            <th>images</th>
                            <th>Name</th>
                            <th>Category Name</th>
                            <th>Type Name</th>
                            <th>Maaş</th>

                            <th>Operation</th>

                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
