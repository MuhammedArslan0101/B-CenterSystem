
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-primary" href="@Url.Action("Add")" style="float:right ; width: 225px; display: inline-block; overflow: auto; white-space: nowrap; margin: 0px auto; border: 1px red solid;"> Create</a>
                <h3 class="box-title">Adv List</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>CategoryName</th>
                            <th>Açiklama</th>
                            <th>Operations</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var category in ViewBag.category)
                        {
                            <tr>
                                <td>@category.CategoryName</td>
                                <td>@category.Aciklama</td>
                                <td>
                                    <a class="btn btn-success" href="@Url.Action("Edit", "Category", new {id=category.Id})">Guncelle | </a>

                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Category", new {id=category.Id})"
                                       onclick="return confirm('Eminmisiniz ? ')">Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>

                    <tfooter>
                        <tr>
                            <th>CategoryName</th>
                            <th>Açiklama</th>
                            <th>Operations</th>
                        </tr>
                    </tfooter>

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->















