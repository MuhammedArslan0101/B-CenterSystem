
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-primary" href="@Url.Action("Add")" style="float:right ; width: 225px; display: inline-block; overflow: auto; white-space: nowrap; margin: 0px auto; border: 1px red solid;"> Create</a>
                <h3 class="box-title">Adv List</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>password</th>
                            <th>email</th>
                            <th>age</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var users in ViewBag.users)
                        {
                            <tr>
                                <td>@users.Username</td>
                                <td>@users.Password</td>
                                <td>@users.Email</td>
                                <td>@users.Age</td>
                                <td>
                                    <a class="btn btn-success" href="@Url.Action("Edit", "Users", new {id=users.Id})"><i class="fa fa-fw fa-edit"></i>Guncelle | </a>

                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Users", new {id=users.Id})"
                                       onclick="return confirm('Eminmisiniz ? ')"><i class="fa fa-fw fa-trash-o"></i> Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->

